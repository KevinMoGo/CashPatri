<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color1">

    <!-- Topbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/color2"
        app:title="Control de Mercancias"
        app:titleTextColor="#000000"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ScrollView con LinearLayout para los botones -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            >

            <!-- Botón 1 -->
            <Button
                android:textStyle="bold"
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="@drawable/botones_blancos_rectangulares"
                android:gravity="start|center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="Entrada de Pedidos"
                android:textColor="#000000"
                />

            <!-- Botón 2 -->
            <Button
                android:textStyle="bold"
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/botones_blancos_rectangulares"
                android:gravity="start|center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="Entrada de traspasos"
                android:textColor="#000000" />

            <!-- Botón 3 -->
            <Button
                android:textStyle="bold"
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/botones_blancos_rectangulares"
                android:gravity="start|center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="pedido interno"
                android:textColor="#000000" />

            <!-- Botón 4 -->
            <Button
                android:textStyle="bold"
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/botones_blancos_rectangulares"
                android:gravity="start|center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="Traspasos"
                android:textColor="#000000" />

            <!-- Botón 5 -->
            <Button
                android:textStyle="bold"
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/botones_blancos_rectangulares"
                android:gravity="start|center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="Inventario"
                android:onClick="aInvetario1"
                android:textColor="#000000" />

            <!-- Botón 6 -->
            <Button
                android:textStyle="bold"
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/botones_blancos_rectangulares"
                android:gravity="start|center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="sinónimos"
                android:textColor="#000000" />

            <!-- Botón 7 -->
            <Button
                android:textStyle="bold"
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/botones_blancos_rectangulares"
                android:gravity="start|center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="Ubicar"
                android:textColor="#000000" />

            <!-- Botón 8 -->
            <Button
                android:textStyle="bold"
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/botones_blancos_rectangulares"
                android:gravity="start|center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="Generar etiquetas"
                android:textColor="#000000" />

            <!-- Botón 9 -->
            <Button
                android:textStyle="bold"
                android:id="@+id/button9"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/botones_blancos_rectangulares"
                android:gravity="start|center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="mermas"
                android:textColor="#000000" />
            <!--  -->

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
