<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Topbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/color2"
        app:title="Configuración"
        app:titleTextColor="#000000"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- LinearLayout con los botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/topbar">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Almacén"
            android:paddingStart="24dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:textAlignment="viewStart"
            android:background="@drawable/botones_config"
            android:textColor="#000000" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PDA"
            android:paddingStart="24dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:textAlignment="viewStart"
            android:background="@drawable/botones_config"
            android:textColor="#000000" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FTP"
            android:paddingStart="24dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:textAlignment="viewStart"
            android:background="@drawable/botones_config"
            android:textColor="#000000"
            android:onClick="aFTP" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Actualización automática"
                android:layout_weight="1"
                android:paddingStart="24dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:textAlignment="viewStart"
                android:background="@drawable/botones_config"
                android:textColor="#000000"
                android:onClick="actualizacionAutomatica"
                />

            <Switch
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Switch"
                android:padding="20dp"
                android:thumbTint="@color/color1"
                android:trackTint="@color/inhabilitado"
                android:shadowColor="@color/black"
                android:background="@drawable/botones_config"
                />

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Borrar datos internos"
            android:paddingStart="24dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:textAlignment="viewStart"
            android:background="@drawable/botones_config"
            android:textColor="#FF0000" />



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
